<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/doctor_img_icon" />


            <TextView
                android:id="@+id/d_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="이름"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/d_t"
                android:text="의사"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/doctor_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:text="병과"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/class_icon_v2"
                android:drawablePadding="10dp"
                android:gravity="center|right"
                android:layout_toRightOf="@+id/imageView"
                android:layout_below="@+id/d_t" />

            <TextView
                android:id="@+id/school_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병원이름"
                android:textColor="#3247BA"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_below="@+id/doctor_class"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/hospital_icon"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center|right"/>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>