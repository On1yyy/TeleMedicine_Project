<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/et_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main.FragRecord">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background_main">


        <TextView
            android:id="@+id/name_sibal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="예약된 진료를 시작하시겠습니까?"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/record_background_img"
            android:layout_marginTop="60dp"/>


        <Button
            android:id="@+id/btn_clinic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/arrow_white"
            android:drawablePadding="80dp"
            android:drawableRight="@drawable/arrow_white"
            android:paddingRight="10dp"
            android:background="@drawable/button_background_ver2"
            android:text="진료 시작"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>