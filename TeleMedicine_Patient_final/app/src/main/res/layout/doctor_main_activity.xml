<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background_main" >

        <TextView
            android:id="@+id/doctor_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="의료진 목록"
            android:textSize="30dp"
            android:drawableBottom="@drawable/doctor_select_128"
            android:drawablePadding="20dp" />

        <EditText
            android:id="@+id/doctor_se"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="값을 입력하세요"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_outline"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/D_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>