<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_background_main">

        <TextView
            android:id="@+id/second_name_text2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건강정보를 입력해주세요."
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:gravity="left"
            android:textColor="#000"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/past_medical_history_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과거 병력 :"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"/>

        <EditText
            android:id="@+id/past_medical_history_insert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="(예시 : 고지혈증, 혈관질환, 암 등) "
            android:inputType="textPersonName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_outline_botton_only"/>


        <TextView
            android:id="@+id/family_medical_history_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가족력 :"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/family_medical_history_insert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="(예시 : 고혈압, 당뇨병, 폐결핵 등)"
            android:inputType="textPersonName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_outline_botton_only"/>


        <TextView
            android:id="@+id/surgical_history_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입원 및 수술경력 :"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/surgical_history_insert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="(예시 : 맹장, 하지정맥 수술 등) "
            android:inputType="textPersonName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_outline_botton_only"/>


        <Button
            android:id="@+id/second_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_background_ver2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14dp"/>

    </LinearLayout>
</RelativeLayout>