<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_background_main"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp">


        <TextView
            android:id="@+id/change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="비밀번호 변경"
            android:textSize="30dp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/change_pass_512"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/insert_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:text="변경전 비밀번호를 입력하세요."
                android:textSize="20dp"
                android:textColor="#000"/>


            <EditText
                android:id="@+id/edit_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insert_text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_outline_botton_only"
                android:drawableLeft="@drawable/key_icon"
                android:drawablePadding="10dp"
                android:ems="13"
                android:hint="변경전 비밀번호"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_change"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/edit_change"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_background_ver2"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/insert_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_change"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="50dp"
                android:text="변경할 비밀번호를 입력하세요."
                android:textColor="#000"
                android:textSize="20dp"
                android:visibility="invisible" />


            <EditText
                android:id="@+id/edit_change2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insert_text2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_outline_botton_only"
                android:drawableLeft="@drawable/key_icon"
                android:drawablePadding="10dp"
                android:ems="13"
                android:hint="변경할 비밀번호를 입력하세요."
                android:inputType="textPassword"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btn_change2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/edit_change2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_background_ver2"
                android:text="변경"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="invisible" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>