<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_background_main"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp">


        <TextView
            android:id="@+id/healthTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="개인 정보"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:stretchColumns="0, 1">

            <TableRow>
                <TextView
                    android:id="@+id/personalID_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="환자 아이디"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only" />

                <TextView
                    android:id="@+id/personalID"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="환자 아이디"
                    android:inputType="textPersonName"
                    android:shadowColor="#D59393"
                    android:gravity="right"
                    android:textSize="23dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/personalName_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="환자 이름"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

                <TextView
                    android:id="@+id/personalName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="환자이름"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/personalBirth_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="생년월일"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>


                <TextView
                    android:id="@+id/personalBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="생년월일"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/personalSchool_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="대학교"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>


                <TextView
                    android:id="@+id/personalSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="대학교"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/personalHospital_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="병원"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>


                <TextView
                    android:id="@+id/personalHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="병원"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/hospitalNumber_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="병원번호"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

                <TextView
                    android:id="@+id/hospitalNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="병원번호"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/personalClass_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="전공"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

                <TextView
                    android:id="@+id/personalClass"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="전공"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/hospitalAddress_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="병원주소"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

                <TextView
                    android:id="@+id/hospitalAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="병원주소"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/personalLicense_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="라이센스"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>

                <TextView
                    android:id="@+id/personalLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:hint="라이센스"
                    android:inputType="textLongMessage"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_outline_botton_only"/>
            </TableRow>
        </TableLayout>




        <Button
            android:id="@+id/checkButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="확인"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background_login"
            android:layout_gravity="center"/>

    </LinearLayout>
</RelativeLayout>